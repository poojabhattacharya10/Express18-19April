<!-- <%  %> :: processing code of ejs in it--> 
<%- include ('./base/header.ejs')   %>

<div class="container">
    <div class="alert bg-success my-3">
        <h4 class="text-center" style="color: white"> Update Student </h4>
    </div>
</div>


    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form action="/student/update/<%= student._id %>" method="post">
                    <div class="field my-3">
                        <label for="" class="form-label">RollNo</label>
                        <input type="text" class="form-control" name="rollNo" value="<%= student.rollNo %>">
                        <!-- name :: req.body.rollNo -->
                    </div>

                    <div class="field my-3">
                        <label for="" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" value="<%= student.name %>">
                        <!-- name :: req.body.name -->
                    </div>

                    <div class="field my-3">
                        <label for="" class="form-label">Father Name</label>
                        <input type="text" class="form-control" name="fatherName" value="<%= student.fatherName %>">
                        <!-- name :: req.body.fatherName -->
                    </div>

                    <div class="field my-3">
                        <label for="" class="form-label">Address</label>
                        <input type="text" class="form-control" name="address" value="<%= student.address %>">
                    </div> 

                    <div class="field my-3">
                        <label for="" class="form-label">MobileNo</label>
                        <input type="text" class="form-control" name="mobileNo" value="<%= student.mobileNo %>">
                    </div>

                    <input type="submit" value="update" class="btn btn-warning my-3 w-100">

                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>

<%- include ('./base/footer.ejs')   %>    