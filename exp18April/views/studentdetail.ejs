<%- include ('./base/header.ejs')   %>

<div class="container">
    <div class="alert bg-success my-3">
        <h4 class="text-center" style="color: white"> Student List   </h4>
    </div>
</div>


<div class="container">
    <table class="table text-center">
        <thead>
            <tr>
                <th>RollNo</th>
                <th>Name</th>
                <th>Father Name</th>
                <th>Address</th>
                <th>Mobile No</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        <% students.forEach((student)=> { %>

            <tr>
                <td><%= student.rollNo %></td>
                <td><%= student.name %></td>
                <td><%= student.fatherName %></td>
                <td><%= student.address %></td>
                <td><%= student.mobileNo %></td>

                <td><a href="/student/edit/show/<%= student._id%>" class="btn btn-warning w-75">Edit</a></td>
                <td><a href="/student/delete/<%= student._id%>" class="btn btn-danger w-75">Delete</a></td>
            </tr>

        <% }) %>    


    </table>
</div>


